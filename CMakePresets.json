{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Unix Makefiles",
      "hidden": true,
      "cacheVariables": {
        "CPACK_GENERATOR": "TGZ",
        "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "EE",
        "CPACK_DEBIAN_PACKAGE_MAINTAINER": "cc <cc@l2x.top>",
        "CPACK_DEBIAN_PACKAGE_NAME": "demo",
        "CPACK_DEBIAN_PACKAGE_DEPENDS": "",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "default",
      "cacheVariables": {
        "CPACK_GENERATOR": "DEB",
        "CPACK_DEBIAN_PACKAGE_ARCHITECTURE": "amd64",
        "CPACK_PACKAGING_INSTALL_PREFIX": "/opt/my/amd64",
        "CMAKE_INSTALL_PREFIX": "/opt/my/amd64",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      },
      "inherits": [
        "base"
      ]
    },
    {
      "name": "aarch64",
      "toolchainFile": "/opt/gcc/toolchains/aarch64-linux-gnu.toolchain.cmake",
      "cacheVariables": {
        "CPACK_PACKAGING_INSTALL_PREFIX": "/",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "/opt/my/aarch64"
      },
      "inherits": [
        "base"
      ]
    },
    {
      "name": "arm",
      "toolchainFile": "/opt/gcc/toolchains/arm-none-linux.toolchain.cmake",
      "cacheVariables": {
        "CPACK_PACKAGING_INSTALL_PREFIX": "/",
        "CMAKE_INSTALL_PREFIX": "/opt/my/arm32"
      },
      "inherits": [
        "base"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      },
      "execution": {
        "noTestsAction": "error",
        "scheduleRandom": true,
        "stopOnFailure": false,
        "timeout": 60
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    }
  ]
}
